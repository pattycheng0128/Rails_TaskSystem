<% if task.errors.any? %>
  <ul>
  <% task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(task) do |f| %>
  <fieldset>
    <legend class="text-center"><%= task_title %></legend>
    <div class="mb-3">
      <%= f.label :name , t('task.name'), class:"form-label" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :content, t('task.content'), class:"form-label" %>
      <%= f.text_area :content, class:"form-control"%>
    </div>
    <div class="mb-3">
      <%= f.label :end_time, class:"form-label" %>
      <%= f.datetime_field :end_time, class:"form-control" %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
