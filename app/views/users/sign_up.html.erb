<div class="container mt-3">
  <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= form_for(@user, url: '/account_verify') do |f| %>
  <fieldset>
    <legend class="text-center">會員註冊</legend>
    <div class="mb-3">
      <%= f.label :email, '信箱' , class:"form-label" %>
      <%= f.email_field :email, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :username, '姓名', class:"form-label" %>
      <%= f.text_field :username, class:"form-control"%>
    </div>
    <div class="mb-3">
      <%= f.label :password, '密碼', class:"form-label" %>
      <%= f.password_field :password, class:"form-control" %>
    </div>
    <div>
      <%= f.submit '註冊' %>
    </div>
  </fieldset>
  <% end %>
</div>

